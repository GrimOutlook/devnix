{ config, ... }:
{
  flake.modules = {
    nixos.wsl = {
      programs.wireshark.enable = true;

      users.groups.wireshark.members = [
        config.flake.meta.owner.username
      ];
    };
    homeManager.gui =
      { pkgs, ... }:
      {
        home.packages = [ pkgs.wireshark ];
      };
  };
}
